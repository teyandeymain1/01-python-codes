{
	"name": "Python",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
    // -----------------------------------------------上記は変更しないでください----------------------------------------------


    // ----------------------------------------------ここは環境によって変更して----------------------------------------------
    "workspaceMount": "source=c:/Users/teyan/Desktop/Programming/Codes/01-python-codes,target=/home/python_with_docker,type=bind,consistency=cached", // for Windows
    //"workspaceMount": "source=/home/yuta/programming/sunagawa_private/01-python-codes,target=/home/python_with_docker,type=bind,consistency=cached", // for Linux 2
    // ------------------------------------------------上記は環境によって変更して----------------------------------------------

    
    // ----------------------------------------------以下は変更しないでください----------------------------------------------
    "workspaceFolder": "/home/python_with_docker",
    "customizations": {
        "settings": {"files.autosave"},
        "vscode": {
            "extensions": [
                // Python extension
                "ms-python.python",
                "ms-python.debugpy",
                // Support extension
                // Verified ownership
                // Support coding by AI
                "visualstudioexptteam.vscodeintellicode",
                "visualstudioexptteam.intellicode-api-usage-examples",
                "github.copilot",
                // Code arrangement
                "oderwat.indent-rainbow",
                "streetsidesoftware.code-spell-checker",
                "esbenp.prettier-vscode",
                // Git
                "github.vscode-pull-request-github",
                // Not verified ownership
                // Git
                "mhutchie.git-graph"
            ]
        }
    },
    //
    "shutdownAction": "stopContainer"
}